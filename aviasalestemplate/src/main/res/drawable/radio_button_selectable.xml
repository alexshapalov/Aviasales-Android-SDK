<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_checked="false" android:state_pressed="false">
		<layer-list>
			<item android:right="9dp">
				<bitmap android:gravity="right|center_vertical" android:src="@drawable/radio_button"/>
			</item>
		</layer-list>
	</item>

	<item android:state_checked="false" android:state_pressed="true">
		<layer-list>
			<item>
				<shape android:shape="rectangle">
					<solid android:color="@color/grey_selector"/>
				</shape>
			</item>
			<item android:right="9dp">
				<bitmap android:gravity="right|center_vertical" android:src="@drawable/radio_button"/>
			</item>

		</layer-list>
	</item>

	<item  android:state_checked="true" android:state_pressed="false">
		<layer-list>
			<item android:right="9dp">
				<bitmap android:gravity="right|center_vertical"
				        android:src="@drawable/radio_button_checked"
						android:tint="@color/colorAviasalesMain"/>
			</item>
		</layer-list>
	</item>

	<item android:state_checked="true" android:state_pressed="true">
		<layer-list>
			<item>
				<shape android:shape="rectangle">
					<solid android:color="@color/grey_selector"/>
				</shape>
			</item>
			<item android:right="9dp">
				<bitmap android:gravity="right|center_vertical"
				        android:src="@drawable/radio_button_checked"
						android:tint="@color/colorAviasalesMain"/>
			</item>
		</layer-list>
	</item>

</selector>