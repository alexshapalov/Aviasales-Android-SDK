<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="false"
	      android:state_selected="false"
	      android:state_enabled="true">
		<layer-list>

			<item>
				<shape android:shape="rectangle">
					<solid android:color="@color/gray_828282"/>
					<corners android:radius="12dp"/>
				</shape>
			</item>

			<item android:bottom="1dp"
			      android:top="1dp"
			      android:left="1dp"
			      android:right="1dp">
				<shape android:shape="rectangle">
					<solid android:color="@color/white"/>
					<corners android:radius="12dp"/>
				</shape>
			</item>
		</layer-list>
	</item>

	<item
			android:state_pressed="true"
			android:state_enabled="true">
		<layer-list>

			<item>
				<shape android:shape="rectangle">
					<solid android:color="@color/colorAviasalesMain"/>
					<corners android:radius="12dp"/>
				</shape>
			</item>

			<item android:bottom="1dp"
			      android:top="1dp"
			      android:left="1dp"
			      android:right="1dp">
				<shape android:shape="rectangle">
					<solid android:color="@color/colorAviasalesMain"/>
					<corners android:radius="12dp"/>
				</shape>
			</item>
		</layer-list>
	</item>

	<item
			android:state_enabled="true"
			android:state_selected="true">
		<layer-list>

			<item>
				<shape android:shape="rectangle">
					<solid android:color="@color/colorAviasalesMain"/>
					<corners android:radius="12dp"/>
				</shape>
			</item>

			<item android:bottom="1dp"
			      android:top="1dp"
			      android:left="1dp"
			      android:right="1dp">
				<shape android:shape="rectangle">
					<solid android:color="@color/colorAviasalesMain"/>
					<corners android:radius="12dp"/>
				</shape>
			</item>
		</layer-list>
	</item>

	<item android:state_pressed="false"
	      android:state_selected="false"
	      android:state_enabled="false">
		<layer-list>

			<item>
				<shape android:shape="rectangle">
					<solid android:color="#cacaca"/>
					<corners android:radius="12dp"/>
				</shape>
			</item>

			<item android:bottom="1dp"
			      android:top="1dp"
			      android:left="1dp"
			      android:right="1dp">
				<shape android:shape="rectangle">
					<solid android:color="@color/white"/>
					<corners android:radius="12dp"/>
				</shape>
			</item>
		</layer-list>
	</item>
</selector>