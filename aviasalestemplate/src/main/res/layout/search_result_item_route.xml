<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

	<com.devspark.robototextview.widget.RobotoTextView
			android:id="@+id/tv_cities"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="16.66dp"
			android:text="LED — BER"
			android:textColor="@color/grey_B3BDBDBD"
			android:textSize="12dp"/>

	<com.devspark.robototextview.widget.RobotoTextView
			android:id="@+id/tv_arrival_and_departure_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignLeft="@+id/tv_cities"
			android:layout_below="@id/tv_cities"
			android:layout_marginTop="-3dp"
			android:text="14:20 — 10:50"
			android:textColor="@color/grey_B3555555"
			android:textSize="14dp"
			app:typeface="roboto_medium"/>

	<View
			android:id="@+id/transfers_anchor_view"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginRight="@dimen/results_transfers_margin_right"
			android:layout_toLeftOf="@+id/duration_anchor_view"/>

	<com.devspark.robototextview.widget.RobotoTextView
			android:id="@+id/tv_flight_transfers_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignLeft="@+id/transfers_anchor_view"
			android:layout_marginRight="25dp"
			android:text="@string/stop_over"
			android:textColor="@color/grey_B3BDBDBD"
			android:textSize="12dp"/>

	<com.devspark.robototextview.widget.RobotoTextView
			android:id="@+id/tv_flight_transfers"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignLeft="@id/tv_flight_transfers_title"
			android:layout_alignRight="@id/duration_anchor_view"
			android:layout_below="@id/tv_cities"
			android:layout_marginTop="-3dp"
			android:text="MUC, LED"
			android:textColor="@color/grey_B3555555"
			android:textSize="14dp"/>

	<View
			android:id="@+id/duration_anchor_view"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_alignParentRight="true"
			android:layout_marginRight="@dimen/results_duration_margin_right"/>

	<com.devspark.robototextview.widget.RobotoTextView
			android:id="@+id/tv_flight_duration_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignLeft="@+id/duration_anchor_view"
			android:text="@string/results_flight_time"
			android:textColor="@color/grey_B3BDBDBD"
			android:textSize="12dp"/>

	<com.devspark.robototextview.widget.RobotoTextView
			android:id="@+id/tv_flight_duration"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignLeft="@+id/tv_flight_duration_title"
			android:layout_below="@id/tv_cities"
			android:layout_marginTop="-3dp"
			android:text="12ч 30м"
			android:textColor="@color/grey_B3555555"
			android:textSize="14dp"/>


</RelativeLayout>